#!/bin/bash -e
cd $(dirname $(readlink -m ${0}))
source ./funcs

### DEVELOP ###
pkg_inst python-pytest
sudo pip3 install -U pytest-cov pytest-qt
sudo pip3 install -U pylint pep8
